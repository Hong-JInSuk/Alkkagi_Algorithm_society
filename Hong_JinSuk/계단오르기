#include<iostream>
#include<vector>
#include<cmath>

using namespace std;

int main() {

	vector<int> arr;
	int dp[300];
	int n; // 계단숫자
	int score; // 계단 값
	cin >> n;

	for (int i = 0; i < n; i++) {
		cin >> score;
		arr.push_back(score);
	}

	dp[0] = arr[0];
	dp[1] = max(arr[0], arr[0] + arr[1]);
	dp[2] = max(arr[0] + arr[2], arr[1] + arr[2]);

	for (int i = 3; i < n; i++) {
		dp[i] = max(dp[i - 2] + arr[i], dp[i - 3] + arr[i - 1] + arr[i]);
	}

	cout << dp[n-1];
	return 0;
}
