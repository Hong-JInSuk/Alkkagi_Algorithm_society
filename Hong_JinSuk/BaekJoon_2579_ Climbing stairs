#include<iostream>
#include<vector>
#include<cmath>

using namespace std;

int main() {

	vector<int> arr;
	int dp[300];
	int n; // 계단숫자
	int score; // 계단 값
	cin >> n;

	for (int i = 0; i < n; i++) {
		cin >> score;
		arr.push_back(score);
	}

	dp[0] = arr[0]; // n=1 일 때, 최대
	dp[1] = max(arr[0], arr[0] + arr[1]); // n=2일 때, 최대
	dp[2] = max(arr[0] + arr[2], arr[1] + arr[2]); // n=3일 때, 최대

	for (int i = 3; i < n; i++) {
		dp[i] = max(dp[i - 2] + arr[i], dp[i - 3] + arr[i - 1] + arr[i]); // 맨뒤에서 1,2,3,4,5,6|7,8 순서로 인덱스가 있을 때,
	}                                                                         // 7,8 + dp5인 경우와 dp6 + 8인 경우밖에 없다.

	cout << dp[n-1];
	return 0;
}
